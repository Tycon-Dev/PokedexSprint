@{
    ViewData["Title"] = "Editar Pokemon";
}

<div class="text-center">

    <h1 class="display-4">Editar Pokemon</h1>

</div>

<form>
    <div class="form-group">
        <label for="Nome">Nome</label>
        <input type="text" class="form-control" placeholder="Digite o nome do pokemon">
    </div>

    <div class="form-group">
        <label for="Tipo">Tipo</label>
        <input type="text" class="form-control" placeholder="Digite o tipo do pokemon">
    </div>

    <div class="form-group">
        <label for="Evolui">O pokemon evolui?</label>
        <input type="text" class="form-control" placeholder="Digite 'Sim' ou 'Não'">
    </div>

    <button type="submit" class="btn btn-primary btn-block">Salvar Edição</button>
    <a class="btn btn-secondary btn-block" asp-controller="Pokemon" asp-action="Index" role="button">Voltar</a>
</form>
