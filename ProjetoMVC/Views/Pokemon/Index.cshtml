@{
    ViewData["Title"] = "Pokemons Cadastrados";
}

<div class="text-center">

    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a role="button" class="btn btn-warning" asp-controller="Pokemon" asp-action="Criar">Adicionar Novo Pokemon</a>
    </div>
    <br/>
    <h1 class="display-4">Lista de Pokemons</h1>

    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nome</th>
                <th scope="col">Tipo</th>
                <th scope="col">Evolui?</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th scope="row">1</th>
                <td>Bulbassauro</td>
                <td>Planta</td>
                <td>Sim</td>
                <td>
                    <div class="btn-group" role="group">
                        <a role="button" class="btn btn-primary" asp-controller="Pokemon" asp-action="Editar">Editar</a>
                        <a role="button" class="btn btn-danger" asp-controller="Pokemon" asp-action="ApagarConfirmacao">Apagar</a>
                    </div>
                </td>
            </tr>
            <tr>
                <th scope="row">2</th>
                <td>Charmander</td>
                <td>Fogo</td>
                <td>Sim</td>
                <td>
                    <div class="btn-group" role="group">
                        <a role="button" class="btn btn-primary" asp-controller="Pokemon" asp-action="Editar">Editar</a>
                        <a role="button" class="btn btn-danger" asp-controller="Pokemon" asp-action="ApagarConfirmacao">Apagar</a>
                    </div>
                </td>
            </tr>
            <tr>
                <th scope="row">3</th>
                <td>Squirtle</td>
                <td>Água</td>
                <td>Sim</td>
                <td>
                    <div class="btn-group" role="group">
                        <a role="button" class="btn btn-primary" asp-controller="Pokemon" asp-action="Editar">Editar</a>
                        <a role="button" class="btn btn-danger" asp-controller="Pokemon" asp-action="ApagarConfirmacao">Apagar</a>
                    </div>
                </td>
            </tr>
        </tbody>
    </table>
</div>